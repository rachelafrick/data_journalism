<!doctype html>
<html lang="en">

  <%- include ('global/header', {title:data.title}) %>
  <%- include ('global/navbar', {blog_array: blog_array}) %>

<body>

  <h2> <%= data.title %> </h2>
  <div class= "row">
      <div class ="col-lg-2">
        <h3> <%= data.author %> </h3>
      </div>
      <div class ="col-lg-3">
        <h3> <%= data.date %> </h3>
      </div>
      <div class = "col-lg-2">
         <h3> <%= data.time %> </h3>
      </div>

  </div>  
      <div class = "container-fluid">
        <div class ="col-lg-12">
          <div class="jumbotron vertical-center" style="background-color: #f2e6dc">

          <% for(var i=0; i<data.content.length; i++) {%>
            <p class="text"> <%= data.content[i] %> <br> </p>
            <% } %>
            
      </div>
    </div>
  </div>

<footer>
<%- include ('global/footer') %>
</footer>
</body>

</html>